	<!-- Login dialog -->
	<div id="signInDialog" class="ms-Dialog" style="display: none;">
		<div class="ms-Overlay ms-Overlay--dark js-DialogAction--close"></div>
		<div class="ms-Dialog-main">
			<button class="ms-Dialog-button ms-Dialog-button--close js-DialogAction--close">
				<i class="ms-Icon ms-Icon--x"></i>
			</button>
			<div class="ms-Dialog-header">
				<p class="ms-Dialog-title text-centered">&{Outlook.signInExoTitle}</p>
			</div>
			<div class="ms-Dialog-inner">
				<form role="form">
					<div class="ms-Dialog-content">
						<p class="ms-Dialog-subText">&{Outlook.signInDescription}</p>
						<div class="ms-TextField">
							<label for="userName" class="ms-Label">&{Outlook.userName}</label><input name="userName" class="ms-TextField-field" type="text">
						</div>
						<div class="ms-TextField">
							<label for="password" class="ms-Label">&{Outlook.password}</label><input name="password" class="ms-TextField-field" type="password">
						</div>
					</div>
					<div class="ms-Dialog-actions text-centered">
						<button class="ms-Dialog-action ms-Button ms-Button--primary signIn" disabled>
							<span class="ms-Button-label" title="&{Outlook.doSignInDescription}">&{Outlook.signIn}</span>
						</button>
						<button class="ms-Dialog-action ms-Button cancel">
							<span class="ms-Button-label" title="&{Outlook.cancelSignInDescription}">&{Outlook.cancel}</span>
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	
